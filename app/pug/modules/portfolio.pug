// Portfolio
section.portfolio#portfolio
	.container
		.row

			//- Portfolio
			.portfolio-menu
				.portfolio-menu__sidebar
					.portfolio-menu__heading-wrap
						h2.section__heading Portfolio
					ul.portfolio-menu__list.list
						li.portfolio-menu__list-item.list__item.list__item--is-active
							a(href="#promo").h6.list__link promo
						li.portfolio-menu__list-item.list__item
							a(href="#logotypes").h6.list__link logotypes
						li.portfolio-menu__list-item.list__item
							a(href="#presentation").h6.list__link presentation
						li.portfolio-menu__list-item.list__item
							a(href="#illustrations").h6.list__link illustrations
						li.portfolio-menu__list-item.list__item
							a(href="#photography").h6.list__link photography

			//- Articles
			.portfolio-articles
				.portfolio-article#promo
					h3.portfolio-article__title.animated-text(data-scroll-animation="blurIn") Promo
					.portfolio-article__images
						img(src="./images/promo-image-1.jpg", class="portfolio-article__image image" alt="promo-1")
						img(src="./images/promo-image-2.jpg", class="portfolio-article__image image" alt="promo-2")
						img(src="./images/promo-image-3.jpg", class="portfolio-article__image image" alt="promo-3")
						img(src="./images/promo-image-4.jpg", class="portfolio-article__image image" alt="promo-4")
						img(src="./images/promo-image-5.jpg", class="portfolio-article__image image" alt="promo-5")
					button(class="btn portfolio-article__btn" data-btn="View less") View more
				.portfolio-article#logotypes
					h3.portfolio-article__title.animated-text(data-scroll-animation="blurIn") Logotypes
